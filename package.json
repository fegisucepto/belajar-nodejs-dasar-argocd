{
  "name": "belajar-nodejs-dasar",
  "version": "1.0.0",
  "description": "Node.js + Express (simple)",
  "main": "app.js",
  "scripts": {
    "dev": "nodemon app.js",
    "start": "NODE_ENV=production node app.js",
    "test": "NODE_ENV=test NODE_OPTIONS=--no-warnings jest --detectOpenHandles --forceExit --runInBand",
    "test:watch": "NODE_ENV=test NODE_OPTIONS=--no-warnings jest --watch --detectOpenHandles",
    "test:coverage": "NODE_ENV=test NODE_OPTIONS=--no-warnings jest --coverage --detectOpenHandles",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "sonar": "node sonar-project.js"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "body-parser": "^1.20.2",
    "express": "^4.18.2",
    "mongoose": "^8.20.0",
    "morgan": "^1.10.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^6.0.0",
    "@types/jest": "^30.0.0",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.1.0",
    "jest": "^30.2.0",
    "mongodb-memory-server": "^10.3.0",
    "nodemon": "^3.0.1",
    "sonarqube-scanner": "^4.3.2",
    "supertest": "^7.1.4"
  }
}
